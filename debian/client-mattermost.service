[Unit]
Description=Client Mattermost
After=network.target

[Service]
Type=notify
ExecStart=/opt/mattermost/bin/mattermost
Environment=MM_FEATUREFLAGS_INSIGHTSENABLED=false
TimeoutStartSec=3600
Restart=on-failure
RestartSec=10
WorkingDirectory=/opt/mattermost
User=mattermost
Group=mattermost
LimitNOFILE=49152

[Install]
WantedBy=multi-user.target
